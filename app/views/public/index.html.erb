<div class = "container" >
    <div class = "row mt-4">
        <div class = "col">
            <h2>Popular Posts</h2>
        </div>
    </div>
    <div class = "row">
        <div class = "col-8">
            <% @posts.each do |post| %>
                <div class = "card p-3">
                    <h4><%= link_to post.title, community_post_path(post.community_id, post) %></h4>
                    <p><%= truncate post.body, length: 200 %></p>
                    <p class: "btn btn-primary mt-4">Like</p>
                    <p class: "btn btn-primary mt-4">Comment</p>
                </div>
            <% end %>        
        </div>
        <div class = "col-4">
            <p class = "h5">Communities</p>
            <div class = "card p-2">
                <ul class = "list-group list-group-flush">
                <% @communities.each do |community| %>
                    <li class = "list-group-item"><%= link_to community.name, community_path(community) %></li>
                <% end %>
                </ul>
            </div>
            <%= link_to "View all",  communities_path, class: "btn btn-primary mt-4" %>
        </div>
    </div>
</div>


