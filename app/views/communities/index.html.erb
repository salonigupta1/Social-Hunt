<div>
    <% if account_signed_in? %>
        <div class = "float-end mt-3">
            <%= link_to "Create New Community", new_community_path, class: "btn btn-outline-dark" %>
        </div>
    <% end %>

    <% if @communities.size > 0 %>
        <% @communities.each do |community| %>
            <div class = "card p-3 mt-3 text-white bg-dark" style="width: 60rem;">
                <h3><%= link_to community.name, community, style: "color: white" %></h3>
                <%= simple_format community.rules %>
            </div>
        <% end %>
    <% else %>
            <p> No communites to display </p>
    <% end %>
</div>