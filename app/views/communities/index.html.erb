<div>
    <% if account_signed_in? %>
        <div class = "float-end mt-3">
            <%= link_to "Create New Community", new_community_path, class: "btn btn-light", style: "background-color: #E3F2FD; color: #4682B4; box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);" %>
        </div>
    <% end %>
    <% if @communities.size > 0 %>
        <% @communities.each do |community| %>
            <div class = "card p-3 mt-3" style="width: 50rem; background-color: #E3F2FD; border-radius: 1px; border-color: #4682B4; box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.25);">
                <h3><%= link_to community.name, community, style: "color: #4682B4" %></h3>
                <%= simple_format community.rules %>
            </div>
        <% end %>
    <% else %>
            <p> No communites to display </p>
    <% end %>
</div>