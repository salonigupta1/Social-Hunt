<div>
<%= link_to "Create New Post", new_community_post_path(@community), class: "btn btn-dark float-end mt-5", style: "width: 10rem" %>
<div class = "p-3">
    <h4><%= @community.name %></h4>
</div>


<% @posts.each do |post| %>
    <div class = "card p-3 mt-2 text-white bg-dark" style="width: 60rem;">
        <h4><%= link_to post.title, community_post_path(@community, post), style: "color: white" %></h4>
        <p><%= truncate post.body, length: 200 %></p>
     </div>
<% end %>
</div>



